@model IEnumerable<BorrowLend.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h1>Items List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Borrower</th>
            <th>Lender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Borrower</td>
                <td>@item.Lender</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
